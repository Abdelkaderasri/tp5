pipeline {
    environment {
        registry = 'bkasri/tp5'
        registryCredential = 'dockerhub'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Cloning Git') {
            steps {
                git 'https://github.com/Abdelkaderasri/tp5'
            }
        }
        stage('Building image') {
            steps {
                script {
                    dockerImage = "${registry}:${env.BUILD_NUMBER}"
                    bat "docker build -t ${dockerImage} . || exit 1"
                }
            }
        }
        stage('Test image') {
            steps {
                script {
                    echo 'Tests passed'
                }
            }
        }
        stage('Login to DockerHub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                    bat '''
                        echo %DOCKER_PASSWORD% | docker login -u %DOCKER_USERNAME% --password-stdin || exit 1
                    '''
                }
            }
        }
        stage('Publish Image') {
            steps {
                script {
                    bat "docker push ${dockerImage} || exit 1"
                }
            }
        }
    }
}
