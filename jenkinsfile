pipeline {
    environment {
        registry = 'bkasri/tp5'
        registryCredential = 'dockerhub'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Cloning Git') {
            steps {
                git 'https://github.com/Abdelkaderasri/tp5'
            }
        }
        stage('Building image') {
            steps {
                script {
                    dockerImage = "bkasri/tp5:${env.BUILD_NUMBER}"
                    sh "docker build -t ${dockerImage} ."
                }
            }
        }
        stage('Test image') {
            steps {
                script {
                    echo 'Tests passed'
                }
            }
        }
        stage('Login to DockerHub') {
            steps {
                script {
                    sh "echo \$DOCKER_PASSWORD | docker login -u \$DOCKER_USERNAME --password-stdin"
                }
            }
        }
        stage('Publish Image') {
            steps {
                script {
                    sh "docker push ${dockerImage}"
                }
            }
        }
    }
}
