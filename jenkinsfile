pipeline {
    environment {
        registry = 'bkasri/tp5'
        registryCredential = 'dockerhub'
        dockerImage = ''
    }
    agent any
    stages {
        stage('Cloning Git') {
            steps {
                git 'https://github.com/Abdelkaderasri/tp5'
            }
        }
        stage('Building image') {
            steps {
                script {
                    dockerImage = docker.build registry + ":$BUILD_NUMBER"
                }
            }
        }
       stage('Login to DockerHub') {
            steps {
                script {
                    bat "docker login -u %bkasri% -p %05041993Biika%"
                }
            }
        }
        stage('Publish Image') {
            steps {
                script {
                    bat "docker push ${dockerImage}"
                }
            }
        }
    }
}
